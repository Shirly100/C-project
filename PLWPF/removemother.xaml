<Window x:Class="PLWPF.removemother"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="removemother" Height="300" Width="300">
    <Grid>
        <Label Content="Choose Mother to Remove" HorizontalAlignment="Left" Margin="68,35,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="choose" HorizontalAlignment="Left" Margin="68,87,0,0" VerticalAlignment="Top" Width="152" Height="31" SelectionChanged="choose_SelectionChanged"/>
        <Button x:Name="remove" Content="Remove Mother" HorizontalAlignment="Left" Margin="68,150,0,0" VerticalAlignment="Top" Width="152" Click="remove_Click"/>

    </Grid>
</Window>
