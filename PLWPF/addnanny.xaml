                <DropShadowEffect BlurRadius="20"/>
            </Label.Effect>
        </Label>
        <CheckBox x:Name="vocations" HorizontalAlignment="Left" Margin="221,301,0,0" VerticalAlignment="Top" RenderTransformOrigin="-6.667,1.479" IsChecked="{Binding Path=Ministry_Vocations}" FontWeight="Bold" >
